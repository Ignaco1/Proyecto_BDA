                    <MudDivider Class="my-2" />
                    <MudNavLink Href="/perfil" Icon="@Icons.Material.Filled.Person" Class="navlink-vita">Perfil</MudNavLink>
                    <MudNavLink Href="/salir" Icon="@Icons.Material.Filled.ExitToApp" Class="navlink-vita">Salir</MudNavLink>
                </MudNavMenu>
            </Authorized>
        </AuthorizeView>
    </Authorized>

    <NotAuthorized>

