    <Authorized>

        <AuthorizeView Roles="Admin" Context="adminAuth">
            <Authorized>
                <MudNavMenu Dense="true" Class="px-2 pb-2">
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" Class="navlink-vita">Inicio</MudNavLink>
                    <MudNavLink Href="/ocupacion" Icon="@Icons.Material.Filled.Insights" Class="navlink-vita">Ocupación</MudNavLink>
